<div id="<%= dom_id team %>">
  <p>
    <strong>Name:</strong>
    <%= team.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= team.description %>
  </p>

  <% employee = Employee.find_by(id:team.team_lead_id) %>
    <% lead = nil %>
    <% unless employee == nil then%>
      <% lead = employee.name %>
    <% end %>

  <p>
    <strong>Team lead:</strong>
    <%= lead %>
  </p>
  <p>
    <strong>Members:</strong>
    <% employees = [] %>
    <% team.employees.each do |employee| %>
      <div>
        <%= employee.name%>
      </div>
    <% end%>
  </p>
  

</div>
