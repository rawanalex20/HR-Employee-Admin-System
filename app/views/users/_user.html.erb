<div id="<%= dom_id user %>">
  <p>
    <%if user.profile.attached?%>
      <%= image_tag(user.profile, size: "200x200") %>
      <%= button_to t(".Delete profile"), delete_profile_user_path(user), method: :delete, class:"btn btn-primary"  %>
    <%end%>
  </p>

  <p>
    <strong><%= t 'users.Email', default: 'not exist'%>:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong><%= t 'users.Name', default: 'not exist'%>:</strong>
    <%= user.name %>
  </p>

</div>
