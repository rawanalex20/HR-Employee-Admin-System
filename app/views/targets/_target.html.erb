<div id="<%= dom_id target %>">
  <p>
    <strong><%= t 'targets.Title', default: 'not exist'%>:</strong>
    <%= target.title %>
  </p>

  <p>
    <strong><%= t 'targets.Description', default: 'not exist'%>:</strong>
    <%= target.description %>
  </p>

  <p>
    <strong><%= t 'targets.Start date', default: 'not exist'%>:</strong>
    <%= target.start_date.strftime("%Y-%m-%d") %>
  </p>

  <p>
    <strong><%= t 'targets.Finish date', default: 'not exist'%>:</strong>
    <%= target.finish_date.strftime("%Y-%m-%d") %>
  </p>

  <% tm = Team.find_by(id:target.team_id) %>
    <% team = nil %>
    <% unless tm == nil then%>
      <% team = tm.name %>
    <% end %>

  <p>
    <strong><%= t 'targets.Team', default: 'not exist'%>:</strong>
    <%= team %>
  </p>

  <p>
    <strong><%= t 'targets.Status', default: 'not exist'%>:</strong>
    <%= target.status %>
  </p>

</div>
