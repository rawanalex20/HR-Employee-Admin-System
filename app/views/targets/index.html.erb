<p style="color: green"><%= notice %></p>

<h1>Targets</h1>

<div id="targets">
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Start date</th>
    <th>Finish date</th>
    <th>Team</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @targets.each do |target| %>
    <tr>
    <td><%= target.title %></td>
    <td><%= target.description %></td>
    <td><%= target.start_date %></td>
    <td><%= target.finish_date %></td>
    <td><%= target.team_id %></td>
    <td><%= target.status %></td>
    <td><%= link_to "Show", target %></td>
    <td><%= link_to "Edit", edit_target_path(target) %></td>
    <td><%= button_to "Delete", target, method: :delete %></td>
    </tr>
    
  <% end %>
</table>
</div>

